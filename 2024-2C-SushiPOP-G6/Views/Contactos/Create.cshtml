@model _2024_2C_SushiPOP_G6.Models.ViewModels.ContactoCliente


@{
    ViewData["Title"] = "Create";
}



<div class="container">
    <h2 class="text-center">Contacto</h2>
    <div class="row justify-content-center">
        @if (!User.IsInRole("EMPLEADO"))
        {

            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">
                        <label asp-for="NombreCompleto" class="col-sm-4 col-form-label">Nombre completo:</label>
                        <div class="col-sm-8">
                            <input asp-for="NombreCompleto" class="form-control" />
                              <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-4 col-form-label">Correo electrónico:</label>
                        <div class="col-sm-8">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label asp-for="Telefono" class="col-sm-4 col-form-label">Teléfono:</label>
                        <div class="col-sm-8">
                            <input asp-for="Telefono" class="form-control" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group row mb-4">

                        <label asp-for="Mensaje" class="col-sm-4 col-form-label">Mensaje:</label>
                        <div class="col-sm-8">
                            <textarea asp-for="Mensaje" class="form-control" rows="4" placeholder="Escribe tu mensaje"></textarea>
                            <span asp-validation-for="Mensaje" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group row text-center">
                        <div class="col-sm-6">
                            <button type="reset" class="btn btn-danger w-100 me-2">Borrar</button>
                        </div>
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-primary w-100 ms-2">Enviar</button>
                        </div>
                    </div>
                </form>
            </div>
        }
        else
        {
            <p> Los empleados no pueden enviar mensajes. </p>
        }
    </div>
</div>

